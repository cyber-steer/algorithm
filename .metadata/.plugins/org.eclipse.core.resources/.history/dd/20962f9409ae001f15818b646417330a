package time;

import java.util.Scanner;

public class Time4 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		long n = scanner.nextLong();
		int count = 0;
		for(long i=n-1; i>0; i--) {
			count+=i;
		}
		count=0;
		for(int i=1; i<n-1; i++){
			for(int j=i+1; j<n; j++) {
				count++;
			}
		}
		System.out.println(count);
		System.out.println(2);
		scanner.close();
	}
}
